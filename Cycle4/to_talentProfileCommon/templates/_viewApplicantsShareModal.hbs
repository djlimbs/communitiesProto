<div aria-hidden="true" aria-labelledby="none" class="modal fade mar--sm--txl" id="share-modal" role="dialog" tabindex="-1">
    <div class="modal__shell">
        <div class="modal__content">
            <div class="modal__top pad--sm--bm">
                <button class="close" data-dismiss="modal" type="button">
                    <span class="close-modal-x"></span><span class="sr-only">Close</span>
                </button>
                <h2 class="modal__heading" id="myModalLabel">Share Applicant List</h2>
            </div>
            <div class="modal__body">
                <label>Link to share:</label>
                {{input type="text" class="pad--sm--xs pad--sm--ls pad--sm--rs" value=shareUrl}}      

                {{#if hiringManager}}
                    Hiring Manager
                    {{hiringManager.Name}}
                    <a href="mailto:{{unbound hiringManager.Email}}">{{hiringManager.Email}}</a> 
                {{/if}}    
            </div>
            <div class="modal__footer">
                <button class="button button--primary js-save" data-dismiss="modal" type="button">OK</button>
            </div>
        </div>
    </div>
</div>