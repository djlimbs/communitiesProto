<div aria-hidden="true" aria-labelledby="none" class="modal fade" id="reject-modal" role="dialog" tabindex="-1">
    <div class="modal__shell">
        <div class="modal__content">
            <div class="modal__top pad--sm--bm">
                <button class="close" data-dismiss="modal" type="button">
                    <span class="close-modal-x"></span><span class="sr-only">Close</span>
                </button>
                <h2 class="modal__heading" id="myModalLabel">Reject Applicants</h2>
            </div>
            <div class="modal__body">
                <p class="">Are you sure you want to reject {{results.total}} applicants matching the current filter conditions?</p>
                <div class="form-group">
                    <label>Disposition</label>
                    <div class="select__wrap">
                        <div class="input__icon juicon juicon-down"></div>
                        {{view "select" content=disposition value=selectedBulkDisposition}}
                    </div>
                </div>
            </div>
            <div class="modal__footer">
                <button class="button button--secondary" data-dismiss="modal" type="button">No, Cancel</button>
                <button class="button button--error js-save" data-dismiss="modal" type="button" {{action "clickConfirmBulkReject"}}>Yes, Reject These</button>
            </div>
        </div>
    </div>
</div>