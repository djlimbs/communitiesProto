<div class="row input__group" data-qa-container="{{unbound name}}">
    <div class="column--md--8">
        {{input type="text" value=value readonly=true data-qa-input=name}}
    </div>
    <div class="column--md--4">
        <button style="border-left: none;" type="button" class="button button--secondary datepicker" data-date-format="" data-date="" data-qa-button="datepicker">
            <span class="juicon juicon-calendar"></span>
        </button>
    </div>
</div>