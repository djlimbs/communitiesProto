                            {{!-- <h3 class="mar--sm--n">Results: 10<span class="text-faded">/14</span></h3> --}}
                            <h3 class="mar--sm--n">Results: {{results.numberViewable}}<span class="text-faded">/{{results.total}}</span></h3>
                        </section>
                        
                        <ul class="list-group list-group--bordered mar--sm--n bg-1 applicant-list-group no-border-on-small">
                            {{!-- ******** {{results}} ********* --}}

                            {{log results}}

                            {{#each application in results.viewableApplications itemController="result"}}
                                {{log 'HERE'}}
                                {{log application}}
                                <li class="list-group__item applicant-entry">
                                    <div class="pad--sm--m pad--sm--bn">
                                    <h4 class="card__heading dots">{{application.Name}}</h4>
                                    <h5 class="card__subheading dots" style="display: inline-block">Status: {{application.Final_Stage__c}} ({{application.Final_Status__c}})</h5>

                                    <div class="mar--sm--ts">
                                        <small class="block dots"><label>Source:</label> {{application.Source__c}}</small>
                                        {{!-- <small class="block dots"><label>Applied On:</label> Dec 10, 2015 @ 11:23 AM (<a href="#">2 more</a>)</small> --}}
                                        <small class="block dots mar--sm--bxs"><label>Applied On:</label> {{formatDate application.Applied_On__c}} {{#if otherAppsLength}}(<a {{action "openApplicationModal"}} href="#" >{{otherAppsLength}} more</a>){{/if}}</small>
                                    </div>

                                    <div class="mar--sm--tm clearfix">
                                        <div class="column column--sm--6">
                                            <small class="block dots" data-qa-label="noResume"><label><span class="juicon juicon-document"></span> <a href="#"> Resume (12B)</a></label></small>
                                        </div>
                                        <div class="column column--sm--6">
                                            <small class="block dots" data-qa-label="noResume"><label><span class="juicon juicon-linkedin"></span> <a href="#"> Search</a></label></small>
                                        </div>
                                    </div>

