<div id="empHistory" class="wizardSection pad--sm--only--n active">
    <h1 class="text-left-center page__heading pad--sm--tm pad--md--tn pad--sm--bm">Employment History</h1>
    {{#if errorMessage}}
        <span class="required-field text-error pad--sm--bm block pad--sm--only--lm pad--sm--only--rm text-left-center">{{errorMessage}} </span>
    {{/if}}
    <div class="panel">
        {{#each employmentHistory in model}}
            <div class="panel__component panel__component--removable pad--sm--tn">
                <button type="button" class="close" {{action "clickDeleteEmploymentHistory" employmentHistory}}><span class="component-remove-x"></span><span class="sr-only">Close</span></button>
                <div class="row">
                    {{#each field in employmentHistory.fields itemController="historyField"}}
                        {{partial field.partial}}
                    {{/each}}
                </div>
            </div>
        {{/each}}
        <div class="panel__component">
            <button class="button button--primary width--full--sm--only" {{action "clickAddEmploymentHistory"}}>Add Employment History <span class="juicon juicon-plus"></span></button>
        </div>
    </div>
</div>