<div class="column--md--6">
    <div class="form__group mar--md--bn mar--md--tm">
        <label for="firstName" class="required-field">
            {{field.label}}
            {{#if field.helpText}}
                <span data-toggle="tooltip" data-placement="bottom" title="{{unbound field.helpText}}" class="has-tooltip juicon juicon-info-circle"></span>
            {{/if}}
        </label>
        {{input type="text" value=field.value name=field.inputName}}
        <small class="input-error-content">Error</small>
    </div>
</div>