<div class="scope-container">
    <div class="content content--readable pad--sm--n pad--sm--tm">
        <div class="panel mar--sm--bm js-panel">
            <div class="panel__top">
                <div class="js-view-buttons">
                    <button type="button" class="button button--primary float--right mar--sm--ls">
                        <span class="juicon juicon-download"></span>
                        Import from LinkedIn
                    </button>
                    <button type="button" {{action "clickEdit"}} class="button button--secondary float--right js-edit-page">
                        <span class="juicon juicon-pencil"></span>
                    </button>
                </div>
                <h2 class="panel__heading">
                    Talent Profile
                </h2>
            </div>
            {{#with talentProfile.User__r}}
                <section id="identity" style="display: block;">
                    <div class="panel__body">
                        <div class="part__left--fixed pad--sm--n">
                            <div class="img-container img-container--lg"><img src="{{unbound SmallPhotoUrl}}">
                            </div>
                        </div>
                        <div class="part__body width--full pad--sm--lm pad--sm--rm">
                                <h5 class="mar--sm--n relatedPerson"><a href="/{{unbound Id}}">{{Name}}</a></h5>
                                <h5 class="text-faded mar--sm--n">
                                    {{Title}}
                                </h5>
                        </div>
                    </div>
                </section>
            {{/with}}
            <section id="custom-fields">
                <div class="js-section-view">
                    <div class="panel__body pad--sm--tn">
                        <div class="row pad--sm--rxxl">
                            {{#each field in tpFields}}
                                <div class="column--md--6">
                                    <label class="block">{{field.label}}</label>
                                    {{#if field.value}}
                                        <p data-qa-label="fieldSetValue">{{{field.value}}}</p>
                                    {{else}}
                                        <p data-qa-label="fieldSetValue">Not Provided</p>
                                    {{/if}}
                                </div> 
                            {{/each}}
                        </div>
                    </div>
                </div>
            </section>
            {{#with talentProfile}}
                {{#if Summary__c}}
                    <section id="summary">
                        <div class="list-heading">
                            <h4 class="list-heading__title">Summary</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            <p class="mar--sm--tn">
                                {{Summary__c}}
                            </p>
                        </div>
                    </section>
                {{/if}}
                {{#with Projects__r}}
                    <section id="projects">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Project"}}</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>{{Name}}</h3>
                                    <small class="text-faded">{{displayDate Start_Date__c End_Date__c "to"}}</small>
                                    <p>
                                        {{Description__c}}
                                    </p>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Recognition__r}}
                    <section id="recognition">
                        <div class="list-heading">
                            <h4 class="list-heading__title">Recognition</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>
                                        {{#if Link__c}}
                                            <a {{action "navigation" Link__c}} href="#" target>{{Name}}</a>
                                        {{else}}
                                            {{Name}}
                                        {{/if}}
                                    </h3>
                                    <small class="text-faded block">{{Issuer__c}}</small>
                                    <small class="text-faded">{{Month__c}} {{Year__c}}</small>
                                    <p>
                                        {{Description__c}}
                                    </p>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Performance_Ratings__r}}
                    <section id="performanceRatings">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Performance Rating"}}</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>
                                        {{#if Link__c}}
                                            <a {{action "navigation" Link__c}} href="#" target>{{Name}} {{#if Rating_Score__c}}({{Rating_Score__c}}){{/if}}</a>
                                        {{else}}
                                            {{Name}} {{#if Rating_Score__c}}({{Rating_Score__c}}){{/if}}
                                        {{/if}}
                                    </h3>
                                    <small class="text-faded">{{#if Date__c}}{{Date__c}} ● {{/if}}{{Job_Title__c}}</small>
                                    <div class="card mar--sm--tm">
                                        <div class="card__body">
                                            <p class="mar--sm--n">
                                                {{Description__c}}
                                            </p>
                                            <div class="text-right">
                                                {{#if Reviewer_Link__c}}
                                                    <a {{action "navigation" Reviewer_Link__c}} href="#" class="block">
                                                        {{Reviewer__c}}
                                                    </a>
                                                {{else}}
                                                    {{Reviewer__c}}
                                                {{/if}}
                                                {{Reviewer_Title__c}}
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Training_Activities__r}}
                    <section id="traning">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Training Activity"}}</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>
                                        {{#if Link__c}}
                                            <a {{action "navigation" Link__c}} href="#" target>{{Name}}</a>
                                        {{else}}
                                            {{Name}}
                                        {{/if}}
                                    </h3>
                                    <small class="text-faded block">{{Source__c}}</small>
                                    <small class="text-faded">{{Date__c}}</small>
                                    <p>
                                        {{Description__c}}
                                    </p>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Skill_Assertions__r}}
                    <section id="otherSkills">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Skill"}}</h4>
                        </div>
                        <div class="panel__body">
                            {{#each records}}
                                {{Skill__r.Name}},
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Publications__r}}
                    <section id="publications">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Publication"}}</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>
                                        {{#if Link__c}}
                                            <a {{action "navigation" Link__c}} href="#" target>{{Name}}</a>
                                        {{else}}
                                            {{Name}}
                                        {{/if}}
                                    </h3>
                                    <small class="text-faded">{{#if Date__c}}{{Date__c}} ● {{/if}}{{Publisher__c}}</small>
                                    <p>
                                        {{Description__c}}
                                    </p>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Patents__r}}
                    <section id="patents">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Patent"}}</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>
                                        {{#if Link__c}}
                                            <a {{action "navigation" Link__c}} href="#" target>{{Name}}</a>
                                        {{else}}
                                            {{Name}}
                                        {{/if}}
                                    </h3>
                                    <small class="text-faded block">{{Number__c}} {{#if Office__c}}({{Office}}){{/if}}</small>
                                    <small class="text-faded">{{Date__c}} {{#if status}}({{status}}){{/if}}</small>
                                    <p>
                                        {{Summary__c}}
                                    </p>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Recommendations__r}}
                    <section id="recommendations">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Recommendation"}}</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <div class="card mar--sm--tm">
                                        <div class="card__body">
                                            <p class="mar--sm--n">
                                                {{Recommendation_Text__c}}
                                            </p>
                                            <div class="text-right">
                                                <p>
                                                    {{Recommender__c}}
                                                </p>
                                                {{Name}}
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Certifications__r}}
                    <section id="certifications">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Certification"}}</h4>
                        </div>
                        <div class="test panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>{{Name}} ({{Number__c}})</h3>
                                    <small class="text-faded block">{{Issuer__c}}</small>
                                    <small class="text-faded">{{displayMonthYear Start_Month__c Start_Year__c End_Month__c End_Year__c "to"}}</small>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Employment_Histories__r}}
                    <section id="employment">
                        <div class="list-heading">
                            <h4 class="list-heading__title">Employment</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>{{Job_Title__c}}</h3>
                                    <small class="text-faded block">{{Name}}</small>
                                    <small class="text-faded">{{displayMonthYear Start_Month__c Start_Year__c End_Month__c End_Year__c "to"}}</small>
                                    <hr class="hr-alt"/>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Education_Histories__r}}
                    <section id="educations">
                        <div class="list-heading">
                            <h4 class="list-heading__title">Education</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>{{Name}}</h3>
                                    <small class="text-faded block">{{Education_Level__c}}</small>
                                    <small class="text-faded">{{displayMonthYear Start_Month__c Start_Year__c End_Month__c End_Year__c "-"}}</small>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
                {{#with Languages__r}}
                    <section id="languages">
                        <div class="list-heading">
                            <h4 class="list-heading__title">{{pluralfication records "Language"}}</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            <ul class="mar--sm--tn">
                                {{#each records}}
                                    <li>{{Name}} {{#if Proficiency_Level__c}}({{Proficiency_Level__c}}){{/if}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </section>
                {{/with}}
                {{#with Volunteer_Work__r}}
                    <section id="volunteering">
                        <div class="list-heading">
                            <h4 class="list-heading__title">Volunteering</h4>
                        </div>
                        <div class="panel__body pad--sm--bn">
                            {{#each records}}
                                <article class="mar--sm--bm">
                                    <h3>{{Name}}</h3>
                                    <small class="text-faded">{{Role__c}}</small>
                                    <p>
                                        {{Description__c}}
                                    </p>
                                </article>
                            {{/each}}
                        </div>
                    </section>
                {{/with}}
            {{/with}}
        </div>
    </div>
</div>