{{#if isOnePage}}
    <div class="wizardSection pad--sm--only--n mar--md--txl" data-qa-container="educationHistoryOnePage">
        <div class="panel">
            <div class="panel__top">
                <h2 class="panel__heading" data-qa-header="educationHistory">
                    {{labels.educationHistory}}
                </h2>
            </div>
            {{#each educationHistory in model itemController="historyBlock"}}
                <div class="panel__component panel__component--removable" data-qa-container="educationHistoryBlock">
                    <button type="button" class="close" {{action "clickDeleteEducationHistory" educationHistory}} data-qa-button="deleteEduHistory"><span class="component-remove-x"></span><span class="sr-only">{{labels.close}}</span></button>
                    <div class="row">
                        {{#each field in educationHistory.fields itemController="historyField"}}
                            {{partial field.partial}}
                        {{/each}}
                    </div>
                </div>
            {{/each}}
            <div class="panel__component">
                <button class="button button--primary width--full--sm--only theme-bg-color" {{action "clickAddEducationHistory"}} data-qa-button="addEduHistory">{{labels.addEducationHistory}} <span class="juicon juicon-plus"></span></button>
            </div>
        </div>
    </div>
{{else}}
    <div class="wizardSection pad--sm--only--n active" data-qa-container="educationHistory">
        <h1 class="text-left-center page__heading pad--sm--tm pad--md--tn pad--sm--bm" data-qa-header="educationHistory">{{labels.educationHistory}}</h1>   
        {{#if errorMessage}}
            {{partial "errorAlert"}}
        {{/if}}                         
        <div class="panel">
            {{#each educationHistory in model itemController="historyBlock"}}
                <div class="panel__component panel__component--removable pad--sm--bn" data-qa-container="educationHistoryBlock">
                    <button type="button" class="close" {{action "clickDeleteEducationHistory" educationHistory}} data-qa-button="deleteEduHistory"><span class="component-remove-x"></span><span class="sr-only">Close</span></button>
                    <div class="row">
                        {{#each field in educationHistory.fields itemController="historyField"}}
                            {{partial field.partial}}
                        {{/each}}
                    </div>
                </div>
            {{/each}}
            <div class="panel__component">
                <button class="button button--primary width--full--sm--only theme-bg-color" {{action "clickAddEducationHistory"}} data-qa-button="addEduHistory">{{labels.addEducationHistory}} <span class="juicon juicon-plus"></span></button>
            </div>
        </div>
    </div>
{{/if}}