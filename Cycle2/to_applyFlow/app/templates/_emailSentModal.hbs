<div class="modal fade" id="emailSentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal__shell">
        <div class="modal__content">
            <div class="modal__top">
                <h2 data-qa-label="modalHeader" class="modal__heading" id="myModalLabel">{{labels.thankYou}}</h2>
            </div>
            <div class="modal__body">
                <p data-qa-label="modalBody" class="mar--sm--tn">
                    {{labels.weSentAVerificationEmailTo}} {{confirmObj.email}}. {{labels.checkYourInboxAndClickLink}}
                </p>
                
            </div>
            <div class="modal__footer">
                <button data-qa-button="resendEmail" type="button" {{bind-attr class=":button :button--secondary isResendingEmail:load-this"}} {{action "clickResendEmail"}}>{{labels.resendEmail}}</button>
                <button id="modalOk" data-qa-button="ok" type="button" class="button button--primary theme-bg-color" data-dismiss="modal">{{labels.ok}}</button>
            </div>
        </div>
    </div>
</div>