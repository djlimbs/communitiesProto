                                            C3.801,15.891,5.138,16,6.5,16s2.699-0.109,4.005-0.312c0.252-0.037,0.47-0.191,0.592-0.413s0.136-0.489,0.033-0.721
                                            c-0.544-1.25-1.84-1.651-3.258-2.014c-0.124-0.032-0.226-0.119-0.276-0.236c-0.049-0.118-0.042-0.253,0.022-0.363
                                            c0.564-0.985,0.927-2.033,0.927-2.487C8.545,8.099,7.856,7,6.5,7C5.145,7,4.454,8.099,4.454,9.454
                                            C4.454,10.099,4.812,10.999,5.372,11.937z"/>
                                        <path class="st0" d="M4.65,5.987L4.762,6C5.125,5.829,5.972,5.435,6.5,5.171C7.029,5.435,7.874,5.829,8.237,6L8.35,5.987L8.396,5.88
                                            C8.359,5.47,8.267,4.528,8.185,3.917c0.428-0.453,1.037-1.196,1.295-1.513L9.498,2.29L9.415,2.211
                                            C9.036,2.124,8.149,1.923,7.556,1.821C7.276,1.25,6.801,0.412,6.597,0.057L6.5,0L6.403,0.057C6.2,0.412,5.725,1.25,5.444,1.821
                                            c-0.594,0.103-1.48,0.303-1.86,0.391L3.502,2.29l0.021,0.114C3.78,2.721,4.39,3.464,4.814,3.917C4.732,4.528,4.642,5.47,4.604,5.88
                                            L4.65,5.987z"/>
                                        </svg>
                                    </span>
                                    <a {{action viewTalentProfile}} data-qa-link="talentProfile" href="#"> Talent Profile</a>
                                {{else}}
                                    <span class="juicon juicon-document"></span>
                                    {{#if resume}}
                                        <a data-qa-link="resume" {{bind-attr href="downloadUrl"}}> {{labels.cardResume}} ({{formatSize resume.ContentSize}})</a>
                                    {{else}}
                                        {{labels.noResume}}
                                    {{/if}}
                                {{/if}}
                            </label>
                        </small>
                    </div>
                    <div class="column--md--6 pad--sm--only--ts pad--sm--only--bs form__group mar--sm--bn">
                        <small class="block dots">
                            <label data-qa-label="noProfile">
                                <span class="juicon juicon-linkedin"></span>
                                {{#if isSF1}}
                                    {{#if hasProfile}}
                                        <a data-qa-link="linkedIn" {{action "loadLinkedIn"}} href="#" target="_blank"> {{labels.cardProfile}}</a>
                                    {{else}}
                                        {{labels.noProfile}}
                                    {{/if}}
                                {{else}}
                                    <a data-qa-link="linkedIn" {{bind-attr href="linkedInAddress"}} target="_blank"> {{linkedInLinkText}}</a>
                                {{/if}}
                                    {{!--
                                    <a data-qa-link="linkedIn" {{bind-attr href="linkedInAddress"}} target="_blank"> {{linkedInLinkText}}</a>
                                    --}}
                            </label>
                        </small>
                    </div>
                    <div class="column--md--6 pad--sm--only--ts pad--sm--only--bs form__group mar--sm--bn">
                        <small class="block dots">
                            <label data-qa-label="noAddress">
                                <span class="juicon juicon-location"></span>
                                {{#if hasAddress}}
                                    {{#if isSF1}}
                                        <span>{{City__c}}, {{State_Province__c}}</span>
                                    {{else}}
                                        <a data-qa-link="address" {{action loadGoogleMaps}} href="#" target="_blank">{{City__c}}, {{State_Province__c}}</a>
                                    {{/if}}
                                {{else}}
                                    {{labels.cardNoAddress}}
                                {{/if}}
                                
                                {{!--}}
                                {{#if hasAddress}}
                                    <a data-qa-link="address" {{bind-attr href="loadAddress"}} target="_blank">{{City__c}}, {{State_Province__c}}</a>
                                {{else}}
                                    {{labels.cardNoAddress}}
                                {{/if}}--}}
                            </label>
                        </small>
                    </div>
                    <div class="column--md--6 pad--sm--only--ts pad--sm--only--bs form__group mar--sm--bn">
                        <small class="block dots">
                            <label>
                                <span class="juicon juicon-calendar"></span>
                                <span data-qa-label="createdDate" data-toggle="tooltip" {{bind-attr title=localeDate}}>{{formatDate CreatedDate}}</span>
                            <a data-qa-link="otherApps" {{action "openApplicationModal"}} {{bind-attr title=otherAppTooltip}} data-toggle="tooltip" data-target="#applicantModal">{{otherAppText}}</a>
                            </label>
                        </small>
                    </div>
                </div>
            </div>
        </div>
        <div class="column--sm--3 column--md--12 pad--sm--n">
            <hr class="mar--sm--bn mar--sm--ts hr-alt dashed show-brkpoint--md"/>
            <small class="card__bottom pad-sm--only-ln pad--sm--only--rm pad--sm--ts pad--sm--bs block">
                <div class="row text-faded table mar--sm--n text-center width--full">
                    <span {{bind-attr class=":table-cell :block-on-small  :pad--sm--n :block :text-center-right :mar--sm--only--ts chatterPosts:text-primary"}}>
                        <span data-qa-tooltip="chatterPosts" data-toggle="tooltip" {{bind-attr title=labels.chatterTooltip}}>
                            <span data-qa-label="chatterPosts" class="juicon juicon-chat"></span> {{chatterPosts}}
                        </span>
                    </span>
                    <span {{bind-attr class=":table-cell :block-on-small  :pad--sm--n :block :text-center-right :mar--sm--only--ts positive:text-success"}}>
                        <span data-qa-tooltip="positive" data-toggle="tooltip" {{bind-attr title=positiveTooltip}}>
                            <span data-qa-label="positive" class="juicon juicon-like"></span> {{positive}}
                        </span>
                    </span>
                    <span {{bind-attr class=":table-cell :block-on-small  :pad--sm--n :block :text-center-right :mar--sm--only--ts negative:text-warning"}}>
                        <span data-qa-tooltip="negative" data-toggle="tooltip" {{bind-attr title=negativeTooltip}}>
                            <span data-qa-label="negative" class="juicon juicon-dislike"></span> {{negative}}
                        </span>
                    </span>
                    {{#if allowNeutral}}
                        <span {{bind-attr class=":table-cell :block-on-small  :pad--sm--n :block :text-center-right :mar--sm--only--ts neutral:text-info"}}>
                            <span data-qa-tooltip="inconclusive" data-toggle="tooltip" {{bind-attr title=neutralTooltip}}>
                                <span data-qa-label="inconclusive" class="juicon juicon-question-circle"></span> {{neutral}}
                            </span>
                        </span>
                    {{/if}}
                </div>
            </small>
        </div>
    </div>
</div>