<!--Candidate-->
<div {{bind-attr class=":card :pointer :no-border-on-small :mar--sm--only--n cardErrorType"}}>
    <div class="row mar--sm--n">
        <div class="column--sm--9 column--md--12 pad--sm--n">
            <div class="card__body pad--sm--bs">
                <div class="float--left avatar-container--md">
                    <img {{bind-attr src="photoUrl"}} alt="">
                </div>
                <div class="card__top">
                    <h4 data-qa-label="name" class="card__heading dots">{{First_Name__c}} {{Last_Name__c}}</h4>
                    <h5 data-qa-label="status" class="card__subheading dots">{{labels.cardStatus}} {{statusText}}
                        {{#if hasOutcome}}
                            <small data-qa-label="outcome" {{bind-attr class=":label outcomeColor"}}>{{Outcome__c}}</small>
                        {{/if}}
                    </h5>
                </div>
            </div>
            <div class="content">
                <div class="form__group mar--sm--bn">
                    <small class="block dots" data-qa-label="source"><label>{{labels.cardSource}}</label> {{Source__c}}</small>
                </div>
                <div class="form__group mar--sm--bn">
                    <small class="block dots" data-qa-label="employment"><label>{{labels.cardEmployment}}</label> {{employmentText}}</small>
                </div>
                <div class="row mar--sm--ts mar--sm--bs">
                    <div class="column--md--6 pad--sm--only--ts pad--sm--only--bs form__group mar--sm--bn">
                        <small class="block dots" data-qa-label="noResume">
                            <label>
                                {{#if isInternal}}
                                    <span class="juicon">
                                        <svg version="1.0" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                             width="13px" height="16px" viewBox="0 0 13 16" style="enable-background:new 0 0 13 16;" xml:space="preserve">
                                        <style type="text/css">
                                        <![CDATA[
                                            .st0{fill:#8d9aa5;}
                                        ]]>
                                        </style>
                                        <path class="st0" d="M5.372,11.937c0.065,0.111,0.075,0.246,0.026,0.366c-0.049,0.118-0.152,0.208-0.276,0.239
