<div aria-hidden="false" aria-labelledby="sendEmailToApplicantModalLabel" class="modal fade in" id="sendEmailToApplicantModal" role="dialog" tabindex="-1">
    <div class="modal__shell">
        <div class="modal__content">
            <div class="modal__top pad--sm--bn">
                <button class="close" data-dismiss="modal" type="button">
                    <span class="close-modal-x"></span><span class="sr-only">Close</span>
                </button>
                <h2 class="modal__heading">
                    Send time slot invitations?
                </h2>
            </div>
            <div class="panel__body pad--sm--xl">
                <p>
                    Placeholder text about sending a time slot selector email.
                </p>
            </div>
            <div class="modal__footer pad--sm--tn">
                <button class="button button--secondary js-cancelSendEmail" {{action "clickCancelModal"}} data-dismiss="modal" type="button">Cancel</button>
                <button class="button button--primary js-justSave" data-dismiss="modal" type="button">Save, Don't Send Yet</button>
                <button class="button button--primary js-confirmSendEmail" data-dismiss="modal" type="button">Save and Send</button>
            </div>
        </div>
    </div>
</div>