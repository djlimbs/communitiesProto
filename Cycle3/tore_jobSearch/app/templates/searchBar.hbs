<div class="scope-container">
    <div class="community-hero mar--sm--bm" style="background: #33536d;">
        <div class="community-hero__bg" style="background-image: url('https://www.salesforce.com/assets/images/careers/business-background.jpg')"></div>
        <div class="content community-hero__content" style="max-width: 700px; margin: 0 auto;">
            <h1 data-qa-label="title" class="text-center mar--md--bxl mar--md--txl"><span class="text-white">{{labels.title}}</span></h1>
            <div class="table-group mar--md--bxl">
                <div class="table-group__object--large block-on-small pad--sm--only--rn">
                    <div class="row">
                        <div class="column--md--6">
                            <div class="form__group mar--md--bn">
                                <div class="input__wrap has-icon--right">
                                    <div class="input__icon juicon juicon-search"></div>
                                    {{input type="text" data-qa-input="searchTerm" placeholder=labels.searchPlaceholder class="bg-1" value=searchTerm}}
                                </div>
                            </div>
                        </div>
                        <div class="column--md--6">
                            <div class="form__group mar--md--bn">
                                <div class="select__wrap">
                                    <div class="input__icon juicon juicon-down"></div>
                                    {{view "select" data-qa-select="categories" content=categories value=selectedJobFamily}}
                                </div>
                            </div>
                        </div>
                        <div class="column--md--6">
                            <div class="form__group mar--sm--tm mar--md--bn">
                                <div class="select__wrap">
                                    <div class="input__icon juicon juicon-location"></div>
                                    {{view "select" data-qa-select="location" content=locations value=selectedLocation}}
                                </div>
                            </div>
                        </div>
                        <div class="column--md--6">
                            {{#if isNear}}
                                <div class="form__group mar--sm--tm mar--md--bn">
                                    <div class="input__wrap has-icon--right">
                                        <div class="input__icon juicon juicon-chch"></div>
                                        {{input type="text" data-qa-input="nearValue" placeholder=labels.nearPlaceholder class="bg-1" value=nearValue}}
                                    </div>
                                </div>
                            {{/if}}
                            {{#if isNearMe}}
                                <div class="row">
                                    <div class="column--sm--6">
                                        <div class="form__group mar--md--tm mar--md--bn">
                                            <div class="select__wrap">
                                                <div class="input__icon juicon juicon-down"></div>
                                                {{view "select" data-qa-select="distance" content=radiusOptions value=selectedRadius}}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="column--sm--6">
                                        <div class="form__group mar--md--tm mar--md--bn">
                                            <div class="select__wrap">
                                                <div class="input__icon juicon juicon-down"></div>
                                                {{view "select" data-qa-select="unit" content=radiusUnits value=selectedUnit}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="table-group__object--small pad--md--lm block-on-small width--full--sm--only mar--sm--only--bxl">
                    <button id="search" type="button" data-qa-button="Search" {{bind-attr disabled="disableSearch" class=":button :button--primary :width--full--sm--only :theme-bg-color isSearching:load-this"}} {{action "clickSearch"}}>{{labels.search}}</button>
                </div>
            </div>
        </div>
    </div>
</div>