{{#aljs-modal modalId="updateInvitationModal" isCloseButtonCustom="true"}}
    <modalHeader>
        <h2 class="slds-text-heading--medium" data-qa-label="updateInvitation">{{labels.updateInvitation}}</h2>
        <button class="slds-button slds-modal__close slds-button--icon-inverse" data-aljs-dismiss="updateInvitationModal" {{action "clickCancelModal"}} data-qa-button="closeModal">
            <svg aria-hidden="true" class="slds-button__icon slds-button__icon--inverse slds-button__icon--large">
                <use xlink:href="{{unbound assetsLocation}}/assets/icons/action-sprite/svg/symbols.svg#close"></use>
            </svg>
            <span class="slds-assistive-text">Close</span>
        </button>
    </modalHeader>
    <modalBody>
        <p data-qa-label="sendInvitesModalBody">
            {{labels.updateInvitationModalBody1}}      
        </p>
        <div class="slds-form-element">
            <div class="slds-form-element__control">
                {{textarea class="slds-textarea" value=updatedInformationMessage maxlength="1000" class="js-updateTextArea" data-qa-input="updateInformationMessage"}}
            </div>
        </div>
    </modalBody>
    <modalFooter>
        <button class="slds-button slds-button--neutral slds-button--brand" {{action "clickConfirmSave"}} data-aljs-dismiss="updateInvitationModal" type="button" data-qa-button="continue">{{labels.continue}}</button>
    </modalFooter>
{{/aljs-modal}}