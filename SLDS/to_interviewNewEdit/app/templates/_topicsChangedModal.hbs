{{#aljs-modal modalId="topicsChangedModal" isCloseButtonCustom="true"}}
    <modalHeader>
        <h2 class="slds-text-heading--medium" data-qa-label="topicsChanged">{{labels.interviewersWillBeNotifiedOfTopicChange}}</h2>
        <button class="slds-button slds-modal__close slds-button--icon-inverse" data-aljs-dismiss="topicsChangedModal" {{action "clickCancelModal"}} data-qa-button="closeModal">
            <svg aria-hidden="true" class="slds-button__icon slds-button__icon--inverse slds-button__icon--large">
                <use xlink:href="{{unbound assetsLocation}}/assets/icons/action-sprite/svg/symbols.svg#close"></use>
            </svg>
            <span class="slds-assistive-text">Close</span>
        </button>
    </modalHeader>
    <modalBody>
        <p data-qa-label="topicsChangedModalBody">
            {{labels.interviewersNotificationModalBody1}}
        </p>
    </modalBody>
    <modalFooter>
        <button class="slds-button slds-button--neutral slds-button--brand" {{action "clickConfirmSendTopicsChange"}} data-aljs-dismiss="topicsChangedModal" type="button" data-qa-button="ok">{{labels.ok}}</button>
    </modalFooter>
{{/aljs-modal}}