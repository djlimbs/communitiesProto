<div aria-hidden="false" aria-labelledby="topicsChangedModal" class="modal fade in" id="topicsChangedModal" role="dialog" tabindex="-1" data-qa-container="topicsChangedModal">
    <div class="modal__shell">
        <div class="modal__content">
            <div class="modal__top pad--sm--bn">
                <button class="close" data-dismiss="modal" type="button" {{action "clickCancelModal"}} data-qa-button="closeModal">
                    <span class="close-modal-x"></span>
                </button>
                <h2 class="modal__heading" data-qa-label="topicsChanged">
                    {{labels.interviewersWillBeNotifiedOfTopicChange}}
                </h2>
            </div>
            <div class="panel__body pad--sm--xl">
                <p data-qa-label="topicsChangedModalBody">
                    {{labels.interviewersNotificationModalBody1}}
                </p>
            </div>
            <div class="modal__footer pad--sm--tn">
                <button class="button button--primary" {{action "clickConfirmSendTopicsChange"}} data-dismiss="modal" type="button" data-qa-button="ok">{{labels.ok}}</button>
            </div>
        </div>
    </div>
</div>