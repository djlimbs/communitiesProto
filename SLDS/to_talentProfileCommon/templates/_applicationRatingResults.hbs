<div class="slds-tile slds-tile--board">
    {{application.First_Name__c}} {{application.Last_Name__c}}
    <small class="slds-show to-va-sort-info slds-p-top--xx-small">{{labels.rating}}
        {{#if isScoreSortCustom}}
            <span {{bind-attr class="application.ratingClass"}}>{{application.applicationRatingVal}}</span>
        {{else}}
            {{#if application.hasApplicationRatingVal}}
                <span {{bind-attr class="application.ratingClass"}} data-qa-label="ratingValueFraction">{{application.applicationRatingVal}}</span> ({{labels.outOf}} {{application.Maximum_Score__c}})
            {{else}}
                <span>{{labels.na}}</span>
            {{/if}}
        {{/if}}
    </small>
</div>