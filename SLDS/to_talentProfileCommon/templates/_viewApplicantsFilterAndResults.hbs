<div class="column--sm--3">
    <div class="card">
        
        <!-- Filters and Results -->
        <section class="pad--sm--m pad--sm--bs">
            {{search-filter ctrl=controller filters=filters filterOptions=filterOptions applicationStageAndStatuses=applicationStageAndStatuses applicationSources=applicationSources locations=locations params=initParams}}
            
        </section>
        <!-- /Filters and Results -->
        
        <section class="pad--sm--m border-top bg-2">
            {{#if isLoadingResults}}
                <div class="content pad--md--ts pad--sm--only--n pad--sm--tm" data-qa-container="filterLoading">
                    <div class="content__section">
                        <div class="load-block">
                            <div class="load-block-icon"></div>
                        </div>
                    </div>
                </div>
            {{else}}
                <h3 class="mar--sm--n" data-qa-label="results">{{labels.results}} {{results.numberViewable}}<span class="text-faded" data-qa-label="resultsTotal">/{{results.total}}</span></h3>
                <div class="mar--sm--bs">
                    <a href="#" data-toggle="modal" data-target="#reject-modal" data-qa-link="bulkReject"><small>{{labels.rejectCapitalized}}</small></a> | <a href="#" data-toggle="modal" data-target="#status-modal" data-qa-link="bulkUpdate"><small>{{labels.updateStatus}}</small></a> | <a href="#" data-toggle="modal" data-target="#share-modal" id="share-modal-trigger" data-qa-link="share"><small>{{labels.share}}</small></a>
                </div>
                <h4 class="mar--sm--n" data-qa-label="sortBy">{{labels.sortBy}}</h4>
                <div class="form-group">
                    <div class="select__wrap">
                        <div class="input__icon juicon juicon-down"></div>
                        {{view "select" 
                                class="pad--sm--rxl small"
                                content=sortOptions 
                                optionLabelPath="content.label"
                                optionValuePath="content.value"
                                value=sortType
                                data-qa-select="sortType"}}
                    </div>
                </div>
                {{#if results.viewableApplications}}
                    <ul id="contentNav" class="list-group list-group--bordered mar--sm--bn bg-1 applicant-list-group">
                        {{#each application in results.viewableApplications itemController="result"}}
                            {{#link-to "viewApplicantsApplicationReader" application.Id tagName="li" class="list-group__item applicant-entry" classNameBindings="application.alertStatusClass" data-qa-link="applicant" disabledWhen="isLoadingMore"}}
                                {{partial application.resultPartial}}
                            {{/link-to}}
                        {{/each}}
                    </ul>
                {{else}}
                    <small class="block mar--sm--tm" data-qa-label="noResults"><em>{{labels.noResults}}</em></small>
                {{/if}}
                {{#unless disableLoadMore}}
                    <div class="text-center mar--sm--tm">
                        <button {{bind-attr class=":button :button--secondary :button--full isLoadingMore:load-this"}} {{action "clickLoadMore"}} data-qa-button="loadMore"><small data-qa-label="loadMore">{{labels.loadMore}}</small></button>
                    </div>
                {{/unless}}
            {{/if}}
        </section>
    </div>
</div>