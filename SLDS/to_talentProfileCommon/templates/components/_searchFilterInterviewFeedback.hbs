<div class="slds-form-element__row slds-clearfix" data-qa-container="interviewFeedbackFilter">
    <div class="slds-form-element__row slds-clearfix">
        <label class="slds-form-element__control slds-float--left slds-size--3-of-4">
            <div class="slds-form-element">
                <label class="slds-form-element__label slds-show" for="date">{{labels.is}}</label>
                {{view "select" 
                    class="slds-select"
                    content=comparisons 
                    optionLabelPath="content.label" 
                    optionValuePath="content.value"
                    value=interviewDirection
                    data-qa-select="interviewDirection"}}
            </div>
        </label>
        <label class="slds-form-element__control slds-col slds-size--1-of-4">
            <div {{bind-attr class=":slds-form-element invalidInterviewScore:slds-has-error"}}>
                <label class="slds-form-element__label slds-show" for="date">{{#if maxInterviewScore}}(<em>{{labels.max}}: {{maxInterviewScore}}</em>){{else}}{{labels.loading}}...{{/if}}</label>
                {{input type="number" class="slds-input" value=interviewScore data-qa-input="interviewScore" tabindex="-1"}}
            </div>
        </label>
    </div>
</div>