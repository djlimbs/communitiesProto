<div class="modal__top pad--sm--bm">
    <button class="close" data-dismiss="modal" type="button"><span class="close-modal-x"></span></button>
    <h2 class="modal__heading" id="myModalLabel" data-qa-label="positionsFilled">{{labels.positionsFilled}}</h2>
</div>
<div class="modal__body">
    {{#if data.hiredApplicants}}
        <div class="ar-filled">
            <table>
                <thead>
                    <tr>
                        <th><label data-qa-label="applicant">{{labels.applicant}}</label></th>
                        <th><label data-qa-label="offerAccepted">{{labels.offerAccepted}}</label></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each applicant in data.hiredApplicants}}
                        <tr {{action "clickApplicant" applicant.Id}} data-qa-link="{{unbound applicant.Id}}">
                            <td data-qa-label="applicantName">{{applicant.Name}}</td>
                            <td data-qa-label="applicantResponseDate">{{formatDate applicant.responseDate}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <span class="block text-faded no-positions-filled"><em data-qa-label="noPositionsFilled">{{labels.noPositionsFilled}}</em></span>
    {{/if}}
</div>
<div class="modal__footer">
    <button class="button button--primary js-save" data-dismiss="modal" type="button" data-qa-button="ok">{{labels.ok}}</button>
</div>