{{#if isOnePage}}
    <div class="wizardSection pad--sm--only--n mar--md--txl" data-qa-container="skillsOnePage">
        <div class="panel">
            <div class="panel__top">
                <h2 class="panel__heading" data-qa-header="skills">
                    {{labels.skills}}
                </h2>
            </div>
            <div class="panel__body">
                <div class="content__section">
                    {{select-2 value=selectedSkills data-qa-input="select2"}}
                </div>
            </div>
        </div>
    </div>
{{else}}
    <div class="wizardSection pad--sm--only--n active" data-qa-container="skills">
        <h1 class="text-left-center page__heading pad--sm--tm pad--md--tn pad--sm--bm" data-qa-header="skills">{{labels.skills}}</h1>
        {{#if errorMessage}}
            {{partial "errorAlert"}}
        {{/if}}
        <div class="content__section">
            {{select-2 value=selectedSkills data-qa-input="select2"}}
        </div>
    </div>
{{/if}}