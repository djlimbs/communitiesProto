<div class="column--md--12">
    <div {{bind-attr class=":form__group field.requiredError:has-error" data-qa-field-container="field.fieldPath"}}>
        {{#if displayState}}
            <label {{bind-attr id="field.labelId" for="field.fieldPath"}}>{{field.label}}</label>
            <div class="input-size"> 
                {{#if field.value}}
                    {{{field.value}}}
                {{/if}}
            </div>
        {{else}}
            <label {{bind-attr id="field.labelId" for="field.fieldPath" class="field.required:required-field" }}>{{field.label}} </label>
            {{#if field.isHTML}}
                {{rich-text componentId=field.componentId data-qa-input=field.fieldPath value=field.value bindingType="text"}}
            {{else}}
                {{textarea componentId=field.componentId data-qa-input=field.fieldPath value=field.value placeholder=field.placeholder}}
            {{/if}}
            <small class="input-error-content">{{field.requiredMessage}}</small>
        {{/if}}
    </div>
</div>