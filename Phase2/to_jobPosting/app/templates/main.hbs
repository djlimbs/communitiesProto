                    <button data-toggle="modal" data-target="#deleteModal" id="delete-this" type="button" class="button button--secondary float--right-left mar--sm--rxs"><span class="show-brkpoint--md">{{labels.to_jobPosting_button_unpost}}</span> <span class="juicon juicon-trash"></span></button>
