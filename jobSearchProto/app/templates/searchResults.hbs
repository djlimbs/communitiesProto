<div class="scope-container brand__border-accent--top" style="border-top-color: #cf5c60">
    <div class="content pad--md--txl pad--md--bl">
        <div class="row">
            <div class="column--md--8">
                <div class="alert alert--success mar--md--bm hide">
                    <button type="button" class="close show-brkpoint--sm--only" data-dismiss="alert"><span class="alert-close-x"></span><span class="sr-only">Close</span></button>
                    <button type="button" class="close close-timeout show-brkpoint--md">
                        <svg class="close-progress" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" enable-background="new 0 0 40 40">
                            <circle class="progress-track progress-track--success" cx="20" cy="20" r="19" opacity="0" stroke="#000" stroke-width="2.5" stroke-linecap="round" stroke-miterlimit="10" fill="none"></circle>
                            <path d="M20 1c10.45 0 19 8.55 19 19s-8.55 19-19 19-19-8.55-19-19 8.55-19 19-19z" class="progress progress--success" stroke-linecap="round" stroke-miterlimit="10" fill="none"></path></svg>
                        <span class="alert-close-x"></span><span class="sr-only">Close</span>
                    </button>
                    <strong>You've successfully applied for this job.</strong>
                </div>
                {{#each searchResult in searchResults itemController="jobPosting"}}
                    <div class="card">
                        <div class="card__body">
                            <div class="row">
                                <div class="column--md--8">
                                    <h1 class="page__heading has-subheading"><a href="#" {{action "clickApply"}}>{{searchResult.Name}}</a></h1>
                                    <h2 class="page__subheading">Chicago, IL</h2>
                                </div>
                                <div class="column--md--4">
                                    <button class="float--right button button--primary mar--sm--only--rs mar--md--lxs show-brkpoint--md theme-border-color theme-link-color" {{action "clickApply"}}>Apply <span class="show-brkpoint--md">Now</span></button>
                                </div>
                            </div>
                            <div class="card__text">
                                <p>{{{searchResult.Job_Description__c}}}</p>
                            </div>
                            <button type="button" class="button button--primary show-brkpoint--sm--only width--full theme-bg-color theme-link-color" {{action "clickApply"}}>Apply</button>
                        </div>
                    </div>
                {{/each}}
            </div>

            <div class="column--md--4">
                <div class="content__section mar--md--bxl">
                    <h3 class="mar--sm--tn mar--sm--bn"><span class="juicon juicon-bookmark text-faded"></span> My saved jobs</h3>
                    <ul class="list-style-type-none mar--sm--n">
                        <li class="mar--sm--bm mar--sm--tm">
                            <h4 class="mar--sm--n"><a href="communities__prototype__job--v2.html">Chief Technology Officer</a></h4>
                            <h5 class="mar--sm--n text-faded">Chicago, IL</h5>
                        </li>
                        <li class="mar--sm--bm mar--sm--tm">
